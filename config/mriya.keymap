#define HM_A  &hm LGUI A
#define HM_S  &hm LALT S
#define HM_D  &hm LCTL D
#define HM_F  &hm LSHFT F

#define HM_J  &hm RSHFT J
#define HM_K  &hm RCTL  K
#define HM_L  &hm RALT  L
#define HM_SCLN &hm RGUI SEMI

&lt {
};

&mt { flavor = "balanced"; };

/ {
};

/ {
    combos {
        compatible = "zmk,combos";

        ju-enter {
            bindings = <&kp ENTER>;
            key-positions = <7 19>;
        };

        fr-enter {
            bindings = <&kp ENTER>;
            key-positions = <16 4>;
        };
    };
    behaviors {
        hm: home_row_mods {
            compatible = "zmk,behavior-hold-tap";
            #binding-cells = <2>;
            tapping-term-ms = <200>;
            quick-tap-ms = <0>;
            flavor = "tap-preferred";
            bindings = <&kp>, <&kp>;
        };
    };
};

